@page
@model ContosoUniversity.Web.Pages.Users.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>User</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.UserName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.UserName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.EmailVerified)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.EmailVerified)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.Rememberme)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Rememberme)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.Deleted)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Deleted)
        </dd>
        <dt class="col-sm-2">
            Role(s)
        </dt>
        @**Display List of roles here*@
        <dd class="col-sm-10">
            <div class="form-group">
                <div class="table">
                    <table>
                        @{
                            foreach (var role in Model.AssignedUserRoles)
                            {
                                @if (role.isAssigned)
                                {
                                    <tr>
                                        <td>
                                            <input type="hidden"
                                                value="@role.RoleID" />
                                        </td>
                                        <td>
                                            @role.Name<br/>
                                        </td>
                                    </tr>
                                }
                            }
                        }
                    </table>
                </div>
            </div>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.User?.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
